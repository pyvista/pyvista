[flake8]
exclude = .git,__pycache__,build,dist,doc/examples,doc/_build
ignore =
    # whitespace before ':'
    E203,
    # line break before binary operator
    W503,
    # line length too long
    E501,
    # do not assign a lambda expression, use a def
    E731,
    # too many leading '#' for block comment
    E266,
    # ambiguous variable name
    E741,
    # module level import not at top of file
    E402,
    # Quotes (temporary)
    Q0,
    # bare excepts (temporary)
    B001, E722
    # we already check black
    BLK100,
    # let black auto-format statements on one line
    E701, E702, E704

per-file-ignores =
    # Allow whitespace for the color dict in this example
     examples/99-advanced/anatomical-groups.py: E201, E241
